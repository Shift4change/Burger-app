
<h2>Burgers to be Devoured!</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>




<h2>Burgers Devoured!</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>




<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
   
    <input type="text" id="burgerApp" name="burger_name">
  </div>

  <p id="ad"><button type="submit">Add Burger</button></p>
</form>
</div>
</div>